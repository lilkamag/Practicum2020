<Page x:Class="Practicum2020.Page_program.Page_main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practicum2020.Page_program"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="640"
      Title="Page_main">

    <Grid Name="_main" Background="White">
        <StackPanel Orientation="Vertical" Margin="10 0 30 0" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="0 20 0 5">
                <Button Content="Добавить товар" Width="140" Height="27" Margin="5 0 5 0"/>
                <Button Content="Редактировать" Width="140" Height="27" Margin="5 0 5 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                <Button Content="Удалить товар" Width="140" Height="27" Margin="5 0 5 0"/>
                <Button Content="Срочный груз" Width="140" Height="27" Margin="5 0 5 0"/>
            </StackPanel>
            <StackPanel Margin="0 10 0 0">
                <ListView>

                </ListView>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
